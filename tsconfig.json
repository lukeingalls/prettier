{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "es2015",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist/*",
    // TBD it is desired to enabled strict type checking at some point:
    "strict": false
  },
  "exclude": [
    "node_modules/",
    "coverage/",
    "test*.*",
    // [TBD] JavaScript sources *not* affected by src/language-*:
    "src/main/aone.js",
    "index.js",
    "standalone.js",
    "bin/",
    "dist/",
    "docs/",
    "scripts/",
    "tests/",
    "tests_config/",
    "tests_integration/",
    "website/"
  ],
  "include": [
    "src/*"
  ]
}